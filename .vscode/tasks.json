{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "osx": {
                "command": "rm",
                "args": [
                    "-rf",
                    "${workspaceRoot}/build/"
                ]
            }
        },
        {
            "label": "make build dir",
            "type": "shell",
            "dependsOn": "clean",
            "group": "build",
            "osx": {
                "command": "mkdir",
                "args": [
                    "-p",
                    "${workspaceRoot}/build"
                ]
            }
        },
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "make build dir",
            "osx": {
                "command": "cp",
                "args": [
                    "-a",
                    "${workspaceRoot}/distrib/*",
                    "${workspaceRoot}/build/"
                ]
            }
        },
        {
            "label": "open",
            "type": "shell",
            "group": "build",
            "osx": {
                "command": "open",
                "args": [
                    "${workspaceRoot}/build/index.html",
                ]
            }
        },
    ]
}